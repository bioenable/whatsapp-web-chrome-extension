    "lint": "eslint *.js",
    "dev": "echo \"Load the extension from the current directory in Chrome Developer Mode\"",
    "validate": "node -e \"JSON.parse(require('fs').readFileSync('manifest.json', 'utf8')); console.log('âœ… Manifest is valid JSON')\""
